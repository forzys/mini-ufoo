@import "../coustom-template/index.wxss";

.cu-accordion,
.accordion-list {
  width: 100%;
  height: 100%;
  position: relative;
}

.accordion-list {
  box-shadow: 0 -1upx 6upx rgba(0, 0, 0, 0.1);
  display: block;
  overflow: hidden;
}

.accordion-name {
  width: 100%;
  display: flex;
  margin: 30upx;
  overflow: hidden;
  font-size: 16px;
  border-radius: 10upx;
  align-items: center;
  transition: all 0.15s ease;
  background-color: #ffffff;
  box-shadow: 0 -1upx 6upx rgba(0, 0, 0, 0.1);
}

.focus {
  font-size: 16px;
}

.accordion-content {
  width: 100%;
}
