@import "../coustom-template/index.wxss";

.cu-accordion,
.accordion-list {
  width: 100%;
  height: 100%;
  position: relative;
}

.accordion-list {
  display: block;
  overflow: hidden;
  box-shadow: 0 -1px 6px rgba(0, 0, 0, 0.1);
}

.accordion-list:first-child {
  box-shadow: none;
}

.accordion-name {
  width: 100%;
  display: flex; 
  overflow: hidden;
  font-size: 16px;
  border-radius: 10rpx;
  align-items: center;
  transition: all 0.15s ease;
  background-color: #ffffff;
}

.focus {
  font-size: 16px;
}

.accordion-content {
  width: 100%;
}
