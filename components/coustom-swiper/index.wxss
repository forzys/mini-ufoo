@import "../coustom-template/index.wxss";

/* 这里的样式只应用于这个自定义组件 */
.cu-swiper {
  width: 100%;
  height: 100%;
  position: relative;
}

.swiper-nav {
  position: relative;
  margin: 0 auto; 
  overflow: hidden;
}
.swiper-list {
  padding-bottom: 12px;
  margin-bottom: 12px;
}
.nav-item {
  font-size: 14px;
  margin: 0 15px;
  text-align: center;
  transition: all 0.25s ease;
  color: var(--grey);
}
.focus {
  font-size: 16px;
  color: var(--brown);
}
.swiper-bar {
  width: 100%;
  position: relative;
  overflow: hidden;
}
