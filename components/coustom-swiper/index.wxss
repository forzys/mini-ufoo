/* 这里的样式只应用于这个自定义组件 */
.cu-swiper {
  width: 100%;
  height: 100%;
  position: relative;
}

.swiper-nav {
  position: relative;
  width: 70%;
  margin: 12px auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-item {
  font-size: 14px;
  margin: 0 15px;
  text-align: center;
  transition: all 0.15s ease;
  color: #ccc;
}

.focus {
  font-size: 16px;
  color: var(--brown);
}
