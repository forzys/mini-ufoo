.text-cut {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}


.flex {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-item {
  flex: 1;
}

/* 这里的样式只应用于这个自定义组件 */
.cu-swiper {
  width: 100%;
  height: 100%;
  position: relative;
}

.swiper-nav {
  position: relative;
  width: 70%;
  margin: 12px auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav-item {
  font-size: 14px;
  margin: 0 15px;
  text-align: center;
  transition: all 0.15s ease;
  color: #ccc;
}
.focus {
  font-size: 16px;
  color: var(--brown);
}
.swiper-bar {
  width: 100%;
  position: relative;
  overflow: hidden;
}

.paper-row {
  min-height: 10vh;
  margin: 20rpx;
  overflow: hidden;
  text-align: center;
}

.paper-col {
  width: 100%;
  height: 100%;
}
.paper-row .paper-col:first-child {
  margin-right: 10rpx;
}
.paper-row .paper-col:last-child {
  margin-left: 10rpx;
}
.paper-img {
  width: 100%;
  height: 100%;
  border-radius: 8px;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
