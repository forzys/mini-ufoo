/**loading */
.cu-load {
  display: flex;
  align-items: center;
  text-align: center;
  transition: all 0.3s;
}

.cu-load::before {
  font-family: "iconfont";
  display: inline-block;
}

.cu-load.loading::before {
  content: "\e602";
  font-size: 50rpx;
  animation: icon-spin 2s infinite linear;
}

.cu-load.loading::after {
  content: "加载中...";
  color: var(--grey);
}

.cu-load.over {
  line-height: 0;
  margin-bottom: -0.5em;
}
.cu-load.over::before {
  content: "";
}

.cu-load.over::after {
  content: "";
}

.cu-load.erro::before {
  content: "\e658";
}

.cu-load.erro::after {
  content: "加载失败";
}

.block {
  display: block;
  width: 100%;
}
