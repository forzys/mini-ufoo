/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
  width: 100vw;
  height: 100vh;
  background-size: cover;
  background-repeat: no-repeat;
  position: relative;
}

#map {
  width: 100vw;
  height: 100vh;
  position: relative;
  z-index: 1;
}
#myCanvas {
  background-color: #fff;
  opacity: 0.2;
  z-index: 3;
  position: absolute;
  top: 0;
  left: 0;
}

.pointer {
  position: absolute;
  top: 20%;
  right: 5%;
  color: red;
  z-index: 2;
}
