.iptv-video {
  height: 100%;
  display: block;
  position: relative;
  /* -o-object-fit: cover;
  object-fit: cover;
  z-index: 0;  */
  /* mix-blend-mode: screen;   */
}

.iptv-video.tip .video-text{
  position: absolute;
  top: 0;
  left:0;
  width: 100%;
  height:80%;
  margin:0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  color:#fff;
}

 

.video-bar {
  width: auto;
  height: 80%;
  margin: 0 15px;
  display: flex;
  position: relative; 
}

.iptv-channel{
  height: 20%;
}
.round {
  width: 100%;
  border-radius: 20rpx;
}

.television_scroll_bar {
  padding-bottom: 30px;
}

.iptv-row {
  width: auto;
  margin: 20px;
  padding-bottom: 20px;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.iptv-row > .iptv-col {
  width: 100%;
  padding-left: 24rpx;
  color: rgba(0, 0, 0, 0.65);
  transition: all 0.6s ease-in-out 0s;
}

.iptv-col.active{
  color: var(--brown); 
}

.swiper-list {
  width: 90%;
  margin: 0 auto;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}

